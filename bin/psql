#!/bin/sh

set -e

if [ "${1}" = -h ]     || \
   [ "${1}" = --help ] || \
   [ "${1}" = help ]; then
  echo "Usage: ${0}"
  echo
  echo "Uses psql to connect to dev database directly"
  exit
else
  if [ ! -z "${1}" ]; then
    echo "Unknown argument: '${1}'"
    exit 1
  fi
fi

echo "[ bin/psql ] Connecting to widgets_development"
PGPASSWORD=postgres psql -U postgres \
                         -h db \
                         -p 5432 \
                         widgets_development
